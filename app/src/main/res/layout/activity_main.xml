<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/new_login_gradient"
        tools:context=".MainActivity">

    <TextView
            android:text="@string/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="24sp"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"
           android:textColor="#fff"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColorHint="#fff"

            android:hint="@string/name"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_person_white_24dp"
            android:drawablePadding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:ems="10"
            android:id="@+id/uname" android:layout_marginTop="236dp" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_lock_red_400_24dp"
            android:drawablePadding="12dp"
            app:layout_constraintCircleRadius="90dp"
            android:hint="@string/pswd"
            android:textColorHint="#fff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:ems="10"
            android:id="@+id/ps" android:layout_marginTop="332dp" app:layout_constraintHorizontal_bias="0.538"/>
    <Button
            android:text="@string/login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_login"

            android:padding="16dp"

            android:textColor="#fff"
            android:textSize="20sp" android:layout_marginTop="412dp" app:layout_constraintHorizontal_bias="0.538"/>
    android:id="@+id/lbtn" android:layout_marginTop="384dp" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="@string/sign"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_signup"
            android:padding="16dp"
            android:textColor="#fff"
            android:id="@+id/sbtn" android:layout_marginTop="492dp" app:layout_constraintHorizontal_bias="0.538"/>
    <ImageView
            android:layout_width="240dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="120dp" app:srcCompat="@drawable/ic_person_white_24dp"
            android:id="@+id/imageView" android:layout_marginTop="68dp" app:layout_constraintHorizontal_bias="0.497"/>

</androidx.constraintlayout.widget.ConstraintLayout>